for(let i=0;i<12;i++){
    let c=document.createElement("div");
    c.className="candle";
    c.style.animationDelay=(i*0.4)+"s";
    candlesContainer.appendChild(c);
}

// ‚≠ê Narasi per kata
const narrationEl = document.getElementById("narration");
const text = "makasih ya sayang udah nemenin aku selama ini, maaf ya sayang aku gak bisa nemenin kamu secara langsung";
const words = text.split(" ");
let index = 0;
function showWord(){
    if(index<words.length){
        narrationEl.innerHTML += words[index]+" ";
        let delay=400;
        if(words[index].includes(",")) delay=800;
        if(words[index].includes(".")) delay=1200;
        index++;
        setTimeout(showWord, delay);
    }else{
        endSplash();
    }
}
setTimeout(showWord, 500);

// ‚≠ê Splash fade out
function endSplash(){
    document.getElementById("splash").style.opacity="0";
    setTimeout(()=>{
        document.getElementById("splash").style.display="none";
        document.getElementById("main").classList.add("show");
        document.body.classList.add("night");
        const audio = document.getElementById("bgm");
        if(audio){
            audio.volume=0;
            audio.play().catch(()=>{});
            let vol=0;
            const fadeIn=setInterval(()=>{
                if(vol<1){vol+=0.02; audio.volume=vol;}else{clearInterval(fadeIn);}
            },200);
        }
        startTypingChat();
        startAutoFireworks();
    },2000);
}

// ‚è≥ Counter real-time
function updateCounter(){
    const counterEl=document.getElementById("counter");
    const now=new Date();
    const start=new Date(2025,11,9);
    const diffMs = now - start;
    const days=Math.floor(diffMs/(1000*60*60*24));
    const months=Math.floor(days/30);
    const remainingDays = days%30;
    const hours = now.getHours();
    const minutes = now.getMinutes();
    const seconds = now.getSeconds();
    counterEl.innerHTML=`‚è≥ Kita sudah bersama ${months} bulan ${remainingDays} hari ${hours} jam ${minutes} menit ${seconds} detik sejak tanggal 9 Desember 2025 üíï`;
}
setInterval(updateCounter,1000);
updateCounter();

// üí¨ Chat typing per huruf
function startTypingChat(){
    const chat=document.querySelectorAll("#chat .msg");
    let i=0;
    function typeMsg(){
        if(i<chat.length){
            chat[i].style.opacity="1";
            const textContent = chat[i].textContent;
            chat[i].textContent="";
            let j=0;
            function typeChar(){
                if(j<textContent.length){
                    chat[i].textContent += textContent[j];
                    j++;
                    let delay = 50;
                    if(textContent[j-1]==","||textContent[j-1]==".") delay=250;
                    setTimeout(typeChar, delay);
                }else{
                    i++;
                    setTimeout(typeMsg, 300);
                }
            }
            typeChar();
        }
    }
    typeMsg();
}

// üéÜ Fireworks otomatis
function startAutoFireworks(){
    setInterval(()=>{
        let f=document.createElement("div");
        f.className="firework";
        f.style.left=Math.random()*100+"vw";
        f.style.top=Math.random()*50+"vh";
