*{margin:0;padding:0;box-sizing:border-box;font-family:'Segoe UI',sans-serif;}
body{
    min-height:100vh;
    background:linear-gradient(to top,#ff9a9e,#fad0c4);
    color:white;
    overflow-x:hidden;
    transition:background 3s ease;
}
body.night{
