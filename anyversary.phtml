}
.star{position:fixed;width:2px;height:2px;background:white;border-radius:50%;opacity:.8;animation:twinkle 2s infinite alternate;}
@keyframes twinkle{from{opacity:.3}to{opacity:1;}}
.moon{position:fixed;top:50px;right:40px;width:90px;height:90px;background:radial-gradient(circle,#fff,#dfe6e9);border-radius:50%;box-shadow:0 0 40px white;opacity:0;transition:opacity 3s;}
body.night .moon{opacity:1;}

/* Splash fantasy */
.splash{position:fixed;inset:0;display:flex;align-items:center;justify-content:center;flex-direction:column;z-index:10;overflow:hidden;}
.aurora, .aurora2{position:absolute;inset:0;filter:blur(90px);opacity:0.6;}
.aurora{background:linear-gradient(120deg, rgba(0,255,200,.3), rgba(255,0,255,.3), rgba(0,100,255,.3));animation:auroraMove 12s ease-in-out infinite alternate;}
.aurora2{background:linear-gradient(60deg, rgba(255,200,0,.25), rgba(255,0,150,.25), rgba(0,255,255,.25));animation:auroraMove2 18s ease-in-out infinite alternate;}
@keyframes auroraMove{from{transform: translateX(-25%) rotate(0deg);}to{transform: translateX(25%) rotate(5deg);}}
@keyframes auroraMove2{from{transform: translateX(25%) rotate(0deg);}to{transform: translateX(-25%) rotate(-5deg);}}
.splash-text{position:relative;text-align:center;}
.narration{opacity:1;text-align:center;font-size:1.2em;line-height:1.8;margin-top:25px;}
.candles{display:flex;gap:10px;margin-top:30px;flex-wrap:wrap;justify-content:center;}
.candle{width:12px;height:50px;background:#eee;border-radius:5px;position:relative;opacity:0;animation:candleIn 1s forwards;}
.candle::before{content:"";position:absolute;top:-12px;left:50%;transform:translateX(-50%);width:8px;height:12px;background:orange;border-radius:50%;opacity:0;animation:flame 1s infinite alternate;}
@keyframes flame{from{transform:translateX(-50%) scale(1);}to{transform:translateX(-50%) scale(1.2);}}
@keyframes candleIn{to{opacity:1;}}

/* Main container */
.container{min-height:100vh;display:flex;align-items:center;justify-content:center;padding:20px;opacity:0;transition:opacity 2s;}
.container.show{opacity:1;}

/* Card */
.card{background:rgba(255,255,255,.15);backdrop-filter:blur(12px);padding:22px;border-radius:20px;max-width:500px;width:100%;text-align:center;box-shadow:0 0 30px rgba(255,255,255,.2);}

/* Photos */
.photos{display:flex;justify-content:center;gap:15px;margin:15px 0;}
.photos img{width:90px;aspect-ratio:1/1;border-radius:50%;object-fit:cover;border:3px solid white;animation:float 3s infinite;}

/* Chat */
.chat{background:rgba(0,0,0,.4);padding:12px;border-radius:15px;margin:15px 0;font-size:.9em;text-align:left;}
.msg{margin:6px 0;padding:8px 12px;border-radius:15px;max-width:80%;opacity:0;}
.me{background:#74b9ff;margin-left:auto;}
.hani{background:#fd79a8;}

/* Counter */
.counter{margin:10px 0;color:#ffeaa7;font-weight:bold;font-size:1em;}

/* Ending */
.ending{margin-top:18px;font-size:1.2em;}
button{margin-top:12px;padding:10px 20px;border:none;border-radius:20px;background:#fd79a8;color:white;font-size:1em;cursor:pointer;}
button:hover{transform:scale(1.1);}

/* Kelopak */
.petal{position:fixed;top:-10px;animation:fall linear infinite;font-size:18px;}
@keyframes fall{to{transform:translateY(110vh) rotate(360deg);}}

/* Firework */
.firework{position:fixed;width:4px;height:4px;background:white;border-radius:50%;animation:explode 1.5s ease-out;}
@keyframes explode{0%{transform:scale(0);}60%{transform:scale(8);opacity:1;}100%{opacity:0;}}

/* Floating & fadeIn */
@keyframes float{0%,100%{transform:translateY(0);}50%{transform:translateY(-8px);}}
@keyframes fadeIn{from{opacity:0;transform:translateY(30px);}to{opacity:1;transform:translateY(0);}}
</style>
